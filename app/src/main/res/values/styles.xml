<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.Light.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Light.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Small.ListTitle">
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="Text.Medium.ListTitle">
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="SectionHeader" parent="Text.Large">
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>